    <glossdiv id='var-glossary-w'><title>W</title>

        <glossentry id='var-WORKDIR'><glossterm>WORKDIR</glossterm>
            <glossdef>
                <para>Path to directory in tmp/work/ where package
                    will be built.</para>
            </glossdef>
        </glossentry>

    </glossdiv>

